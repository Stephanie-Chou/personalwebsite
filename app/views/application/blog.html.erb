<div class="container-fluid block">
	<div class = "row">
  
	  <div class= "col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">	
	  		<div class="page-header">
          <h1 class = "playful">Tech Blog <small>Eat, Code, Repeat</small></h1>
          <br/>
        </div>

        <%@articles.each do |article|%>
          <div class="panel panel-primary" id=<%=article.id%>>
            <div class="panel-heading">
              <date><%=article.date%></date>
              <h3 class="panel-title"><%=article.title%></h3>
            </div>
            <div class="panel-body">
              <p><strong>Problem: </strong><%=article.problem%></p>
              <%=article.content.html_safe%>
              <p><strong>Runtime: </strong><%=article.runtime%></p>
              <p><strong>Language: </strong> <%=article.language%></p>
<pre class="prettyprint lang-<%=article.language%>">
<%=article.code.html_safe%>
</pre>      

            </div>
            <%if signed_in?%>
              <button class="btn btn-default edit" name = "edit"><%= link_to "Edit", edit_post_path(:id => article.id) %></button>
            <%end%>
          </div>
        <%end%>


